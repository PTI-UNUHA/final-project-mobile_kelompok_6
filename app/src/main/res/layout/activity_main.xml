<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_beige"
    tools:ignore="MissingClass">

    <!-- Header Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/headerCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile Syntax\nChallenge"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Master Logika, One Code Anda"
                android:textSize="12sp"
                android:layout_marginTop="6dp"
                android:textColor="@color/text_secondary" />

            <!-- Tombol Mulai -->
            <Button
                android:id="@+id/btnStartQuiz"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="14dp"
                android:text="Mulai Kuis Sekarang"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/bg_button_orange" />

            <!-- Pilihan Level -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp">

                <!-- Baris 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnLevelKids"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="42dp"
                        android:text="Pilih Level Kids"
                        android:textAllCaps="false"
                        android:textColor="@color/text_dark"
                        android:background="@drawable/bg_button_gray"/>

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/btnLevelMedium"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="42dp"
                        android:text="Sedang"
                        android:textAllCaps="false"
                        android:textColor="@color/text_dark"
                        android:background="@drawable/bg_button_gray"/>
                </LinearLayout>

                <!-- Baris 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/btnLevelEasy"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="42dp"
                        android:text="Mudah"
                        android:textAllCaps="false"
                        android:textColor="@color/text_dark"
                        android:background="@drawable/bg_button_gray"/>

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/btnLevelSedang"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="42dp"
                        android:text="Sulit"
                        android:textAllCaps="false"
                        android:textColor="@color/text_dark"
                        android:background="@drawable/bg_button_gray"/>
                </LinearLayout>

            </LinearLayout>

            <!-- Judul materi -->
            <TextView
                android:id="@+id/materiHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Belajar Materi"
                android:layout_marginTop="12dp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:textSize="14sp"/>

            <!-- Daftar materi -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Pengenalan Kode Dasar"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"
                    android:paddingTop="6dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. Struktur Pemrograman Dasar"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"
                    android:paddingTop="4dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3. Penggunaan Kondisi dan Logika"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"
                    android:paddingTop="4dp"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/white"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerCard">

        <ImageButton
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home"
            android:background="@android:color/transparent"
            android:contentDescription="Home"/>

        <ImageButton
            android:id="@+id/nav_materi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_book"
            android:background="@android:color/transparent"
            android:contentDescription="Materi"/>

        <ImageButton
            android:id="@+id/nav_kuis"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_quiz"
            android:background="@android:color/transparent"
            android:contentDescription="Kuis"/>

        <ImageButton
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_profile"
            android:background="@android:color/transparent"
            android:contentDescription="Profil"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>