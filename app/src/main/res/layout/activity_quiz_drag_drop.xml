<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/bg_beige">

    <!-- Judul -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kuis (Drag & Drop)"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_dark" />

    <!-- Area item drag -->
    <LinearLayout
        android:id="@+id/dragContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <!-- Item drag 1 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="System class (valid)"
            android:padding="10dp"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_drag_item" />

        <!-- Item drag 2 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="System out println(tadi)"
            android:padding="10dp"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_drag_item" />

        <!-- Item drag 3 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="public static main (i arg)"
            android:padding="10dp"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_drag_item" />

        <!-- Item drag 4 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Static class Main {"
            android:padding="10dp"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_drag_item" />

    </LinearLayout>

    <!-- Drop area -->
    <LinearLayout
        android:id="@+id/dropArea"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_drop_area"
        android:padding="10dp"
        android:orientation="vertical">
    </LinearLayout>

    <!-- Button submit -->
    <Button
        android:id="@+id/btnCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Periksa Kode"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_button" />

    <!-- Bottom Navbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:padding="5dp"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_home" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/ic_book" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/ic_quiz" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/ic_leaderboard" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/ic_profile" />
    </LinearLayout>

</LinearLayout>